#include <iostream>

using namespace std;

struct person{
    /* data */
    string name;
    int age;
};

void np(person p, int edad){p.age = edad;}

int main(){
    person persona = {"Juan", 24};

    cout << "Name: " << persona.name << ", Age: " << persona.age << endl;

    np(persona, 25);

    cout << "Name: " << persona.name << ", Age: " << persona.age << endl;

    return 0;
}